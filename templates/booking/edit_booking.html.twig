        <div class="container">
            <div class="section-title">
                <h2>Edit Reservation</h2>
                <p>Modify your reservation details</p>
            </div>

            <form action="{{ path('edit_booking', {'id': booking.id}) }}" method="POST" role="form" class="php-email-form">
                <div class="row gy-4">
                    <div class="col-lg-4 col-md-6">
                        <input type="text" name="name" class="form-control" value="{{ booking.name }}" required>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <input type="email" name="email" class="form-control" value="{{ booking.email }}" required>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <input type="text" name="phone" class="form-control" value="{{ booking.phone }}" required>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <input type="date" name="date" class="form-control" value="{{ booking.date|date('Y-m-d') }}" required>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <input type="time" name="time" class="form-control" value="{{ booking.time|date('H:i') }}" required>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <input type="number" name="people" class="form-control" value="{{ booking.people }}" required>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <textarea class="form-control" name="message" rows="5">{{ booking.message }}</textarea>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a href="{{ path('ma_page') }}" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
