{% extends 'base.html.twig' %}
{% block body %}
     <section id="booking-list" class="section py-5" style="margin: 80px auto;">
        <div class="container">
            <div class="section-title">
                <h2>Reservation</h2>
                <p>My Reservations </p>
            </div>

            {% if bookings is not empty %}
                <div class="table-responsive">
                    <table class="table table-dark table-hover table-bordered text-center align-middle">
                        <thead class="table-light text-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Date</th>
                            <th scope="col">Time</th>
                            <th scope="col">People</th>
                            <th scope="col">Message</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for booking in bookings %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ booking.name }}</td>
                                <td>{{ booking.email }}</td>
                                <td>{{ booking.phone }}</td>
                                <td>{{ booking.date|date('Y-m-d') }}</td>
                                <td>{{ booking.time|date('H:i') }}</td>
                                <td>{{ booking.people }}</td>
                                <td>{{ booking.message|default('N/A') }}</td>
                                <td>
                                    <a href="{{ path('edit_booking', {'id': booking.id}) }}" class="btn btn-warning btn-sm">
                                        Edit
                                    </a>
                                    <form action="{{ path('delete_booking', {'id': booking.id}) }}" method="post" style="display:inline;">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this reservation?');">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center">
                    <p class="fs-5">No reservations found.</p>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
